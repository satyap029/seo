tdFormat = "<TR><TD width='' height='' align='"& c_align & "'>" & item_mq & "<a href=" & """{LINK}""" & "><font style='font-family:" & i_font & ";font-size:" _
			& i_size & ";text-decoration:" & i_underline & ";" _ 
