		& " border-width: " & rb_b_weight & ";' bordercolor='" & rb_b_color _
		& "' cellpadding='" & boxpadding & "' bgcolor='" & tbgcolor & "'>"
	if title = "y" then
		Response.Write "<TR><TD width='' height='' align='" & t_align & "'>" & title_mq & "<font style='font-family:" & t_font & ";font-size:" _
