	Set RSSItem = RSSItems.item(i) 
		for each child in RSSItem.childNodes 
			Select case lcase(child.nodeName) 
				case "title" 
					item = child.text 
				case "link" 
					link = child.text 
				case "description" 
					content = child.text 
			End Select 
	next 

